{% extends 'base.html.twig' %}

{% set page_title =  'app.cart.checkout.page_title'|trans %}

{% block body %}
    <div class="success-checkout-gradient text-black min-h-screen flex items-center">
        <div class="container mx-auto p-4 flex flex-wrap items-center">
            <div class="w-full md:w-5/12 text-center p-4">
                <img src="{{ asset('build/img/success_checkout.png') }}" alt="Not Found"/>
            </div>
            <div class="w-full md:w-7/12 text-center md:text-left p-4">
                <div class="text-6xl font-medium">
                    {{ 'app.cart.checkout.title'|trans }}
                </div>
                <div class="text-xl md:text-3xl font-medium mb-4 my-5">
                    {{ 'app.cart.checkout.message'|trans }}
                </div>

                <a href="{{ path('home') }}"
                   class="border-2 font-bold border-black uppercase text-2xl text-black text-center mt-8 p-4 inline-block hover:text-gray-700">
                    {{ 'app.cart.continue_shopping'|trans }}
                </a>
            </div>
        </div>
    </div>
{% endblock %}

