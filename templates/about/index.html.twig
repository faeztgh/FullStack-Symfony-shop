{% extends 'base.html.twig' %}

{% set page_title = "About" %}

{% block body %}

    <div class="w-full min-h-screen flex">
        <img src="{{ asset('build/img/about.png') }}"
             alt="background" class="object-cover lg:block hidden object-center h-screen w-1/2">
        <div class="bg-white flex flex-col justify-center items-center w-full lg:w-1/2 shadow-lg">
            <div class="w-full ">
                <div class="w-full px-8 xl:px-32 py-16">
                    <h1 class="mt-5 text-3xl font-bold" id="loadProducts">
                        {{ 'app.about.title'|trans }}
                    </h1>
                    <p class="tracking-wide leading-loose mt-16 text-gray-700 font-semibold">
                        {{ 'app.about.body'|trans }}
                    </p>
                </div>

            </div>
        </div>
    </div>


{% endblock %}
